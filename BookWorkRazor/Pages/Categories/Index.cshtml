@page
@model BookWorkRazor.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-dark">
                Category list
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary bg-dark ">
                <i class="bi bi-cart-plus"></i>Create Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr class="w-85">
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/Edit"
                               asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2 rounded-2">
                                <i class="bi bi-pencil-fill"></i>Edit
                            </a>
                            <a asp-page="/categories/Delete"
                               asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2 rounded-2">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>