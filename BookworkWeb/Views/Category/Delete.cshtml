@model Category

<form method="post">
    @* <input asp-for="Id" hidden /> *@
    <div class="border p-3 mt-5">
        
        
        <div class="row pb-2">
            <h2 class="text-dark">Delete Category</h2>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control text-dark" />
           
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Display order</label>
            <input asp-for="DisplayOrder" disabled class="form-control text-dark" />
            
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">
                    Delete
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to list
                </a>
            </div>
        </div>
    </div>
</form>

