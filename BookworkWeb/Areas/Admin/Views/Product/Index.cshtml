
@model List<Product>


<div class="card-shadow border-0">
    <div class="card-header">
        @* <div asp-validation-summary="All">
        </div> *@
        <div class="col-12 text-center">
            <h2>Product List</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4 pb-3">
            <div class="col-6 text-end">
                <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary bg-dark ">
                    <i class="bi bi-cart-plus"></i>Create Product
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Titile</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr class="w-85">
                        <td>
                            @obj.Title
                        </td>
                        <td>
                            @obj.ISBN
                        </td>
                        <td>
                            @obj.Price
                        </td>
                        <td>
                            @obj.Author
                        </td>
                        <td>
                          
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Admin" asp-controller="Product" asp-action="Upsert"
                                   asp-route-id="@obj.Id"
                                   class="btn btn-primary mx-2 rounded-2">
                                    <i class="bi bi-pencil-fill"></i>Edit
                                </a>
                                <a asp-area="Admin" asp-controller="Product" asp-action="Delete"
                                   asp-route-id="@obj.Id"
                                   class="btn btn-danger mx-2 rounded-2">
                                    <i class="bi bi-trash"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>